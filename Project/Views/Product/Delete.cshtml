@model Product

@{
    Layout = "_App_Layout";
}

<br><br>

<h1 class="d-flex justify-content-center">Ensure deleting the product</h1>

<br><br>

<form asp-action="Delete">

    <div class="form-group">
        <label asp-for="ProductId" class="form-label"></label>
        <input asp-for="ProductId" class="form-control" readonly/>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" readonly/>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" readonly/>
    </div>

    <br>
    
    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" readonly/>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" readonly/>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="ImagePath" class="form-label"></label>
        <input asp-for="ImagePath" class="form-control" readonly/>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <input asp-for="CategoryId" type="text" value=@Model.Category!.Name class="form-control" readonly/>
    </div>

    <input type="submit" value="Delete the product" class="btn btn-success my-5" />
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
    
</form>
