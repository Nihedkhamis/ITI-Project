@model Product

@{
    Layout = "_App_Layout";
}

<br><br>

<h1 class="d-flex justify-content-center">Edit the Product</h1>

<br><br>

<form asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="ProductId">

    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <br>
    
    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="ImagePath" class="form-label"></label>
        <input asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-items="ViewBag._Categories" asp-for="CategoryId" class="form-control">
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>


    <input type="submit" value="Edit the product" class="btn btn-success my-5" />
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
    
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
