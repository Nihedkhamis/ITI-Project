@model Category

@{
    Layout = "_App_Layout";
}

<br><br>

<h1 class="d-flex justify-content-center">Edit the Category</h1>

<br><br>

<form asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="CategoryId">

    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br>

    <input type="submit" value="Edit the product" class="btn btn-success my-5" />
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
    
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
